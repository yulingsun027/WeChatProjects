  /* position: relative; */
  background-color: pink;
  background-size: cover;
  background-position: center;
  height: 180px;
  width:300px;
  display: flex;
  justify-content: center;
  align-items: center;
  color:black;
  font-size: 20px;
  /* font-weight: bold; */
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  border-radius: 5px;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-bottom: 20px;
}

.product-card .left {
  flex-direction: column;
  margin-right: 15px;
}
.product-card .right {
  flex-direction: column;
}
.points {
  font-size: small;
}

.cards {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.card-name {
  flex-basis: 45%;
  justify-content: center;
  align-items: center;
  font-size: large;
  background-image: url('https://i.etsystatic.com/6678603/r/il/17e30e/1665903210/il_fullxfull.1665903210_99hj.jpg');
  background-size: cover;
  height: 150px;
  width:150px;
  margin-bottom: 20px;
  border-radius: 20px;
}
.quantity{
  position: relative;
}

.plus {
  bottom: 20px;
  right: 45px;
  position: absolute;
  font-width: 25px;
}
.minus {
  bottom: 20px;
  left: 45px;
  position: absolute;
  font-width: 25px;
}